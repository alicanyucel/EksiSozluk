@using EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Writer/WriterLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Duzenle</th>
    </tr>
    @foreach (var item in Model)
   {
    <tr>
        <td>@item.BlogId</td>
        <td>@item.BlogTitle</td>
        <td> @item.BlogCreateDate</td>
        <td>@item.Category.CategoryName</td>
        <td>@item.BlogStatus</td>
        <td><a href="~/Blog/DeleteBlog/@item.BlogId" class="btn btn-danger">Sil</a></td>
         <td><a href="~/Blog/EditBlog/@item.BlogId" class="btn btn-warning">Düzenle</a></td>
    </tr>
   }
</table>
<a href="~/Blog/BlogAdd" class="btn btn-primary">Yeni Blog Ekle</a>